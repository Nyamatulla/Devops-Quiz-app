Pipeline {
   agent any {


    stages {
         stage('checkout') {
            steps {
              checkout scm
              }
        }
        
        
        stage('build & test') {
          steps {
             script {

              bat 'mvn clean package'
              bat 'docker build -t dev-quiz-img'
              
              }
          }
       }
          
        stage('Deploy') {
           steps {
              script {
                    bat 'docker run -p 8081:8081 --name quiz dev-quiz-img'
                  }
            
               }
           
           }
       }
       
   }
}
